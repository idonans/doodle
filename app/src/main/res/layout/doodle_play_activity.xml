<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/content_panel"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/material_grey_900"
             android:fitsSystemWindows="true"
             tools:context="com.idonans.doodle.demo.MainActivity">

    <com.idonans.doodle.player.DoodleViewPlayer
        android:id="@+id/doodle_view_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF323232"/>

    <LinearLayout
        android:id="@+id/play_controller_panel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom"
        android:background="#80ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seek_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="快退"/>

        <Button
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="播放/暂停"/>

        <Button
            android:id="@+id/seek_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="快进"/>

        <Button
            android:id="@+id/speed_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="速度+"/>

        <Button
            android:id="@+id/speed_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:text="速度-"/>
    </LinearLayout>
</FrameLayout>
